#increment-size $click #increment-div {
    border-bottom-width: +=1px;
    border-left-width: +=1px;
    border-right-width: +=1px;
    border-top-width: +=1px;
    width: += 10px;
}

#decrement-size $click #increment-div {
    border-bottom-width: -=1px;
    border-left-width: -=1px;
    border-right-width: -=1px;
    border-top-width: -=1px;
    width: -= 10px;
}

#multiple-increment $click {
    width: += 10px;
    width: += 20px;
    width: -= 1px;
    width: -= 2px;
    width: -= 2px;
}
